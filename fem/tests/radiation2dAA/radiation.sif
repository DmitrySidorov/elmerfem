! Legacy radiation test.
! Now with Anderson Acceleration.
! The case is slightly modified to give better use for the method. 
!
! P.R. 11.12.2019

Check Keywords Warn

Header
  Mesh DB "." "radiation"
End

Constants
  Stefan Boltzmann = 5.67e-8
End

Simulation
  Max Output Level = 7
  Coordinate System = Cartesian 2D
  Simulation Type = Steady State
  Steady State Max Iterations = 1
  Output Intervals = 1
!  Post File = radiation.vtu
End

Body 1
  Equation = 1
  Material = 1
  Initial Condition = 1
End

Body 2
  Equation = 1
  Material = 2
  Body Force = 1
  Initial Condition = 1
End

Initial Condition 1
  Temperature = 250.0
End

Body Force 1
  Heat Source = 10000.0
End

Material 1
   Density = 1.0
   Heat Conductivity = 0.2
   Heat Capacity = 1.0
   Emissivity = 0.6
End

Material 2
   Density = 1.0
   Heat Conductivity = 0.2
   Heat Capacity = 1.0
   Emissivity = 0.6
End

Solver 1
  Equation = Heat Equation
  Stabilize = True
  Linear System Solver = Iterative
  Linear System Iterative Method = BiCGStab
  Linear System Convergence Tolerance = 1.0e-4
  Linear System Max Iterations = 500
  Linear System Preconditioning = ILU
  Nonlinear System Newton After Iterations = 1
  Nonlinear System Newton After Tolerance = 1.0e-8

! Number of iterations is tuned so that this does not converge without AA
  Nonlinear System Max Iterations = 21
  NonLinear System Convergence Tolerance = 1.0e-8
  Steady State Convergence Tolerance = 1.0e-8
  Nonlinear System Relaxation Factor = 0.3

  Nonlinear System Anderson Acceleration = Logical True
  Nonlinear System Anderson Iterations = Integer 4
End

Equation 1
  Active Solvers = 1
End

Boundary Condition 1
  Name = "RadiationBC"
  Target Boundaries(2) = 1 2
  Heat Flux BC = True
  Radiation = Diffuse Gray
End

Boundary Condition 2
  Name = "Outside"
  Target Boundaries = 3
  Temperature = 100
End


Solver 1 :: Reference Norm = 5.49078849E+02
